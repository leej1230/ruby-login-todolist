<h1>Todos!</h1>

<h2>Add New Todo</h2>

<%= form_with model: @todo do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% @todo.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<ul>
    <%@todos.each do |todo|%>
        <li>
            <%= todo.title%>
            <%= link_to "Completed Task", todo_path(todo.id), data: {
                turbo_method: :delete,
                # turbo_confirm: "Are you sure?"
            } %>
        </li>
    <%end%>
</ul>