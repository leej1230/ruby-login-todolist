<h1>Add New Todo</h1>

<%= form_with model: @todo do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% @todo.errors.full_messages_for(:title).each do |message| %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>